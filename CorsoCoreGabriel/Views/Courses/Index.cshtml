@model CoursesListViewModel


<div class="row">
    <div class="col-md-8">
        <h1>Catalogo dei corsi</h1>
    </div>
    <div class="col-md-4 d-flex align-items-center">
        <form asp-controller="Courses" asp-action="Index" method="get">

            <div class="input-group">

                <input type="text" name="search" placeholder="Cerca..." value="@Model.Input.Search" />
                <div class="input-group-append">
                    <button><i class="fas fa-search"></i> </button>
                </div>
            </div>
        </form>
    </div>
</div>



<div class="row">

    <div class="col-md-1">
    </div>
    <div class="col-md-5">
        <order-link order-by="Title" input="@Model.Input"> Titolo</order-link>
    </div>
    <div class="col-md-2">
        <order-link order-by="Title" input="@Model.Input"> Valutazione</order-link>
    </div>
    <div class="col-md-2">
        <order-link order-by="Title" input="@Model.Input"> Prezzo</order-link>
    </div>
    <div class="col-md-2">
    </div>

</div>



@foreach (var course in Model.Courses.List)
{
    <partial name="Courses/_CourseLine" model="@course" />
}

<vc:pagination-bar model="@Model"></vc:pagination-bar>