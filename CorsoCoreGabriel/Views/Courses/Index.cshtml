@model List<CourseViewModel>
<h1>Catalogo dei corsi</h1>


@foreach (CourseViewModel course in Model)
{
    <div class="row">
        <div class="col-md-1">
            <img src="@course.ImagePath" width="50">
        </div>
        <div class="col-md-5">
            <h2>@course.Title</h2>
            <h3>@course.Author</h3>
        </div>
        <div class="col-md-2" title="@course.Rating" >
            @for(int i=1;i<=5;i++)
            {
                if (course.Rating>=i)
                {
                    <i class="fas fa-star"></i>
                }
                else if (course.Rating>i-1)
                {
                    <i class="fas fa-star-half-alt"></i>

                }
                else
                {
                    <i class="far fa-star"></i>

                }

            }
        </div>
        <div class="col-md-2">
            EUR 10,99 <br/> <s>EUR 13,99</s>
        </div>
        <div class="col-md-2">
            <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="5">Dettaglio Corso 5</a>
        </div>
    </div>
}