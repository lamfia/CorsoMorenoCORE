@model CourseViewModel

<hr />
<div class="row">
    <div class="col-md-1">
        <img src="@Model.ImagePath" width="50" height="52">
    </div>
    <div class="col-md-5">
        <h2>@Model.Title </h2>

        <author> @Model.Author </author>

    </div>
    <div class="col-md-2" title="@Model.Rating">

        <rating value="@Model.Rating"> </rating>

    </div>
    <div class="col-md-2">

        <price current-price="@Model.CurrentPrice" full-price="@Model.FullPrice"></price>

    </div>
    <div class="col-md-2">
        <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@Model.Id">Dettaglio Corso @Model.Id</a>
    </div>
</div>